{
  "private": true,
  "name": "root",
  "workspaces": [
    "example",
    "plugin"
  ],
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "description": "Flipper Support for Expo Apps",
  "scripts": {
    "build": "yarn workspace expo-community-flipper expo-module build",
    "clean": "yarn workspace expo-community-flipper expo-module clean",
    "lint": "yarn workspace expo-community-flipper tslint --project ./tsconfig.json",
    "test": "yarn workspace expo-community-flipper expo-module test",
    "prepare": "yarn workspace expo-community-flipper expo-module prepare",
    "prepublishOnly": "yarn workspace expo-community-flipper expo-module prepublishOnly",
    "expo-module": "yarn workspace expo-community-flipper expo-module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakobo/expo-community-flipper.git"
  },
  "author": "Jakob Heuser <jakob@codedrift.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jakobo/expo-community-flipper/issues"
  },
  "homepage": "https://github.com/jakobo/expo-community-flipper#readme",
  "packageManager": "yarn@3.1.1"
}
